  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "include":[
    "app/scripts/**/*.ts",
    "activity/**"
  ],
  "exclude":[
	"app/**/*-aot.ts",
    "node_modules"
  ]
}